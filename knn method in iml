{"cells":[{"cell_type":"code","source":["import math\n","from collections import Counter\n","\n","points=['A','B','C','D']\n","x1=[7,8,5,9]\n","x2=[2,1,4,6]\n","labels=['pos','neg','pos','neg']\n","p=[8,2]\n","k=3\n","\n","dataset=[]\n","for i in range (len(points)):\n","  dist=math.sqrt(((p[0] - x1[i])**2) + ((p[1] - x2[i])**2))\n","  dataset.append({'name': points[i], 'dist' : dist, 'label' : labels[i]})\n","\n","\n","dataset.sort(key=lambda x: x['dist'])\n","\n","neighbors = dataset[:k]\n","\n","neighbors_labels= [n['label'] for n in neighbors]\n","prediction=Counter(neighbors_labels).most_common(1)[0][0]\n","print(f\"target point p {p} results:\")\n","print(\"-\" * 30)\n","for n in neighbors:\n","  print(f\"neighbors {n['name']}: distances {n['dist']:.2f},class: {n['label']}\")\n","print(\"-\" * 30)\n","\n","print(f\"final prediction for p: {prediction}\")"],"metadata":{"id":"dLmFg9H-81Gz","colab":{"base_uri":"https://localhost:8080/"},"executionInfo":{"status":"ok","timestamp":1769831869193,"user_tz":-330,"elapsed":31,"user":{"displayName":"24CSEAIML108 DEBASISH SAHOO","userId":"12947406601669252490"}},"outputId":"0f76ace5-09d0-407b-c5e7-d2057d5a77b8"},"execution_count":7,"outputs":[{"output_type":"stream","name":"stdout","text":["target point p [8, 2] results:\n","------------------------------\n","neighbors A: distances 1.00,class: pos\n","neighbors B: distances 1.00,class: neg\n","neighbors C: distances 3.61,class: pos\n","------------------------------\n","final prediction for p: pos\n"]}]},{"cell_type":"code","source":[],"metadata":{"id":"7APfJQBwHX-9"},"execution_count":null,"outputs":[]}],"metadata":{"colab":{"provenance":[{"file_id":"/v2/external/notebooks/intro.ipynb","timestamp":1769827688907}]},"kernelspec":{"display_name":"Python 3","name":"python3"}},"nbformat":4,"nbformat_minor":0}